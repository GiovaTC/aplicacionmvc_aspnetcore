@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: url('/images/fondopantallaosoperesoso.png') no-repeat center center fixed;
            background-size: cover;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .navbar-brand, .navbar-nav .nav-link {
            color: white !important;
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 56px; /* Ajuste para que no se superponga con la navbar */
            left: 0;
            background-color: rgba(0, 0, 0, 0.8);
            padding-top: 20px;
        }

            .sidebar a {
                padding: 10px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }

        .content {
            margin-left: 260px;
            margin-top: 60px;
            padding: 20px;
            color: white;
        }
    </style>
</head>
<body>

    <!-- Barra de navegación superior -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Mi Aplicación</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Menú lateral -->
    <div class="sidebar">
        <h3 class="text-center text-light">Menú</h3>
        <a href="/">Inicio</a>
        <a href="/Home/Login">Login</a>
    </div>

    <!-- Contenido principal -->
    <div class="content">
        <h1 class="display-4">Bienvenido</h1>
        <p>Aprende sobre <a href="https://learn.microsoft.com/aspnet/core" class="text-light">desarrollo web con ASP.NET Core</a>.</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
